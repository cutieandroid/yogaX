<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/secondary"
        app:cardElevation="2dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/oldlace"
            app:cardElevation="2dp">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">


                <ImageView
                    android:id="@+id/imageviewforrv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY">

                </ImageView>
                <TextView
                    android:id="@+id/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12font_mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_18font_mdp"
                android:text="How to do ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_signal_cellular_alt_1_bar_24"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp"
                android:layout_marginTop="@dimen/_20mdp"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/step2"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_signal_cellular_alt_2_bar_24" android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp"
                android:layout_marginTop="@dimen/_20mdp"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/step3"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_signal_cellular_alt_24"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp"
                android:layout_marginTop="@dimen/_20mdp"

                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_22font_mdp"
                android:layout_marginTop="@dimen/_30mdp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Timer"
                android:textSize="@dimen/_10mdp"
                android:textColor="@color/black"
                android:padding="@dimen/_10mdp"
                android:background="@drawable/buttonbg"
                android:layout_gravity="center"/>



        </LinearLayout>

    </LinearLayout>








</ScrollView>

