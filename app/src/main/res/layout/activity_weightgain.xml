<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".screens.weightgain">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is your Happy meal :) "
                android:textColor="@color/black"
                android:textSize="@dimen/_20font_mdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10mdp"
                app:layout_constraintBottom_toTopOf="@+id/recommendation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.866" />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200mdp"
                app:lottie_rawRes="@raw/newfoodanim"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_15mdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Lunch"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_18font_mdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recylerviewweightgainbf"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_marginHorizontal="@dimen/_15mdp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Breakfast"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_18font_mdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recylerviewweightgainlun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15mdp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Dinner"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_18font_mdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recylerviewweightgaindin"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

        </LinearLayout>

    </LinearLayout>






</ScrollView>